<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:orientation="vertical"
    tools:context=".Activitys.DetailTrack">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="236dp"
            app:srcCompat="@drawable/default_picture" />

        <TextView
            android:id="@+id/circuitName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/drivernumb"
            android:padding="5sp"
            android:text="TextView"
            android:textColor="@color/colorFont"
            android:textSize="17dp" />


        <TextView
            android:id="@+id/circuitLocality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/colorWhite"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/driverconstructor"
            android:padding="5sp"
            android:text="TextView"
            android:textColor="@color/colorFont"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/latlong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/colorWhite"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/driverconstructor"
            android:padding="5sp"
            android:text="TextView"
            android:textColor="@color/colorFont"
            android:textSize="17dp" />




    </LinearLayout>
</ScrollView>